@model RedeSocial.Models.Usuario

    <body background="https://visme.co/blog/wp-content/uploads/2017/07/50-Beautiful-and-Minimalist-Presentation-Backgrounds-045.jpg">
        <div style="padding-top: 15px">
            <button class="btn btn-primary" id="registroBtn" type="button" data-toggle="collapse" data-target="#registro" aria-expanded="true" aria-controls="#registro">Registrar-se</button>
            <button class="btn btn-primary" id="loginBtn" type="button" data-toggle="collapse" data-target="#login" aria-expanded="false" aria-controls="#login">Login</button>
        </div>

        <div class="collapse multi-collapse" id="registro">
            <h2>Novo por aqui?</h2>

            <form action="/Usuario/Index"  method="post">
                <div class="form-group">
                    <label>Nome de usuário<b style="color:red"> *</b></label>
                    <input class="form-control" maxlength="12" name="nick" placeholder="Nome de usuário">
                </div>
                <div class="form-group">
                    <label>Nome completo<b style="color:red"> *</b></label>
                    <input class="form-control" maxlength="24" name="nome" placeholder="Nome completo">
                </div>
                <div class="form-group">
                    <label>Bio</label>
                    <input class="form-control" maxlength="255" name="bio" placeholder="Bio">
                </div>
                <div class="form-group">
                    <label>Senha<b style="color:red"> *</b></label>
                    <input type="password" class="form-control" maxlength="24" name="senha" placeholder="Senha">
                </div>
                <div class="form-group">
                    <label>Privacidade <b style="color:red"> *</b></label>
                    Público<input type="radio" name="privacidade" value="TRUE">
                    Privado<input type="radio" name="privacidade" value="FALSE">
                </div>

                <p style="color: #ff0000">* Obrigatorio</p>
                <button type="submit" class="btn btn-default">Registrar-se</button>
            </form>
        </div>
        <div class="collapse multi-collapse" id="login">
            <h2>Bem vindo de volta.</h2>

            <form action="/Usuario/Login" method="post">
                <div class="form-group">
                    <label>Nome de usuário</label>
                    <input class="form-control" maxlength="12" name="nickLogin" placeholder="Nome de usuário">
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" maxlength="24" name="senhaLogin" placeholder="Senha">
                </div>
                <button type="submit" class="btn btn-default">Login</button>
            </form>
        </div>
</body>

<script>
    $(document).ready(function(){
        $("registroBtn").click(function(){
          $("#login").collapse('toggle');
        });
    });

    $(document).ready(function(){
        $("loginBtn").click(function(){
          $("#registro").collapse('toggle');
        });
    });
</script>